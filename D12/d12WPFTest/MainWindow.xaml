<Window x:Class="d12WPFTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:d12WPFTest"
        mc:Ignorable="d"
        Title="Click! Buttons" Height="100" Width="150">
    <Grid>
        <Button Content="A" HorizontalAlignment="Left" VerticalAlignment="Top" Width="40" Click="Button_A_Click"/>
        <Button Content="B" HorizontalAlignment="Left" VerticalAlignment="Top" Width="40" Margin="45,0,0,0" Click="Button_B_Click"/>
        <Button Content="Quit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="40" Margin="90,0,0,0" Click="Quit_Click"/>
        <TextBlock Name="TextBlock" HorizontalAlignment="Left" Margin="0,25,0,0" Width="130"  TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
    </Grid>
</Window>
