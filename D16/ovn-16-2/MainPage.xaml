<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="d16MAUICalculator.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="10">

            <Label
                x:Name="CalcResult"
                Text="0,0"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Entry x:Name="CalcEntry" Completed="CalcEntry_Completed"/>

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                <Button WidthRequest="110"
                    TextColor="#FFFF88"
                    BackgroundColor="black"
                    Text="=" 
                    Clicked="OnEqualClicked"
                    HorizontalOptions="Fill" />
                <Button WidthRequest="50"
                    TextColor="#FFFF88"
                    BackgroundColor="black"
                    Text="←" 
                    Clicked="OnBackspaceClicked"
                    HorizontalOptions="Fill" />
                <Button WidthRequest="50"
                    TextColor="#FFFF88"
                    BackgroundColor="black"
                    Text="CA"                     
                    Clicked="OnCaClicked"
                    HorizontalOptions="Fill" />
            </HorizontalStackLayout>

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                <Button WidthRequest="50"
                    TextColor="#FFFF88"
                    BackgroundColor="black"
                    Text="-" 
                    Clicked="OnDigitClicked"
                    HorizontalOptions="Fill" />
                <Button WidthRequest="50"
                    Text="7" 
                    Clicked="OnDigitClicked"
                    HorizontalOptions="Fill" />
                <Button WidthRequest="50"
                    Text="8" 
                    Clicked="OnDigitClicked"
                    HorizontalOptions="Fill" />
                <Button WidthRequest="50"
                    Text="9" 
                    Clicked="OnDigitClicked"
                    HorizontalOptions="Fill" />
            </HorizontalStackLayout>

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                <Button WidthRequest="50"
                    TextColor="#FFFF88"
                    BackgroundColor="black"
                    Text="+" 
                    Clicked="OnDigitClicked"
                    HorizontalOptions="Fill" />
                <Button WidthRequest="50"
                    Text="4" 
                    Clicked="OnDigitClicked"
                    HorizontalOptions="Fill" />
                <Button WidthRequest="50"
                    Text="5" 
                    Clicked="OnDigitClicked"
                    HorizontalOptions="Fill" />
                <Button WidthRequest="50"
                    Text="6" 
                    Clicked="OnDigitClicked"
                    HorizontalOptions="Fill" />
            </HorizontalStackLayout>

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                <Button WidthRequest="50"
                    TextColor="#FFFF88"
                    BackgroundColor="black"
                    Text="*" 
                    Clicked="OnDigitClicked"
                    HorizontalOptions="Fill" />
                <Button WidthRequest="50"
                    Text="1" 
                    Clicked="OnDigitClicked"
                    HorizontalOptions="Fill" />
                <Button WidthRequest="50"
                    Text="2" 
                    Clicked="OnDigitClicked"
                    HorizontalOptions="Fill" />
                <Button WidthRequest="50"
                    Text="3" 
                    Clicked="OnDigitClicked"
                    HorizontalOptions="Fill" />
            </HorizontalStackLayout>
            
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                <Button WidthRequest="50"
                    TextColor="#FFFF88"
                    BackgroundColor="black"
                    Text="/" 
                    Clicked="OnDigitClicked"
                    HorizontalOptions="Fill" />
                <Button WidthRequest="50"
                    Text="0" 
                    Clicked="OnDigitClicked"
                    HorizontalOptions="Fill" />
                <Button WidthRequest="50"
                    Text="," 
                    Clicked="OnDigitClicked"
                    HorizontalOptions="Fill" />
                <Button WidthRequest="50"
                    Text="-" 
                    Clicked="OnDigitClicked"
                    HorizontalOptions="Fill" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
